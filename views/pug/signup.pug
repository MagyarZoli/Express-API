- const username = {"type": "text", "id": "username", "name": "username"};
- const email = {"type": "text", "id": "email", "name": "email"};
- const password = {"type": "password", "id": "password", "name": "password"};

  doctype html
  html(lang="en")
    include parials/header
    body
      include parials/navbar
      form
        h2 Sign up
        input&attributes(username)
        label(for=username.id) Username
        div(class="username error")
        input&attributes(email)
        label(for=email.id) Email
        div(class="email error")
        input&attributes(password)
        label(for=password.id) Password
        div(class="password error")
        button Sign up
      script(src="/js/signup.js")